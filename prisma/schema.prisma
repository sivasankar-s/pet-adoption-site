generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model petDetails {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  dateOfBirth     DateTime
  type            String
  gender          String
  breed           String
  owner           String
  imageUrl        String
  availableStatus Boolean  @default(true)
  description     String?
}
